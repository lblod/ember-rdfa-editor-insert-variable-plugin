{{#if this.showCard}}
  <AuCard @flex={{true}} @divided={{true}} @isOpenInitially={{true}} @expandable={{true}} @shadow={{true}} @size="small" as |c|>
    <c.header>
      <AuHeading @level="3" @skin="6">
        {{t "insert.codelist"}}
      </AuHeading>
    </c.header>
    <c.content>
      <PowerSelect
        @allowClear={{false}}
        @searchEnabled={{false}}
        @options={{this.codelists}}
        @selected={{this.selectedCodelist}}
        @onChange={{this.updateCodelist}} as |variable|
      >
        {{variable.label}}
      </PowerSelect>
      <AuButton {{on 'click' this.insert}} @disabled={{not this.selectedCodelist}}>{{t "insert.button"}}</AuButton>
    </c.content>
  </AuCard>
{{/if}}

